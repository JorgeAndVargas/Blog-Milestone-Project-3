<section class="posts">
    <h2 class="posts-heading"> Latests Posts </h2>
    <ul class="posts-ul">

        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <img src= <%= post.image %> alt="image description" class="post-image"></img>
                    <span class="post-title"><%= post.title %></span>
                    <span class="posts-list-date"><%= post.createdAt.toDateString() %></span>
            </li>
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>

</section>